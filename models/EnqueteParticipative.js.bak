const mongoose = require('mongoose');

const ReponseSchema = new mongoose.Schema({
  question: { type: String, required: true },
  reponse: { type: mongoose.Schema.Types.Mixed, required: true }, // Mixed pour permettre String, Number, Boolean, etc.
});

const EnqueteParticipativeSchema = new mongoose.Schema({
  nomEnquete: {
    type: String,
    required: [true, 'Le nom de l\'enquÃªte est requis'],
    trim: true,
  },
  identifiantParticipant: {
    type: String,
    required: [true, 'L\'identifiant du participant est requis'],
  },
  dateEnquete: {
    type: Date,
    default: Date.now,
  },
  donneesDemographiques: {
    age: { type: Number },
    sexe: { type: String, enum: ['Homme', 'Femme', 'Autre'] },
    niveauEducation: { type: String },
  },
  reponses: [ReponseSchema],
  suggestions: {
    type: String,
    trim: true,
  },
}, {
  timestamps: true,
});

module.exports = mongoose.model('EnqueteParticipative', EnqueteParticipativeSchema);